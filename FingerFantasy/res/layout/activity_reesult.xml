<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_screen_new"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chokobo.fingerfantasy.ResultActivity" >

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="380dp"
        android:paddingEnd="0dp"
        android:paddingLeft="120dp"
        android:paddingRight="0dp"
        android:paddingStart="25dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/getExp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="222dp"
        android:paddingEnd="0dp"
        android:paddingLeft="150dp"
        android:paddingRight="0dp"
        android:paddingStart="25dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/nextExp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="116dp"
        android:paddingEnd="0dp"
        android:paddingLeft="150dp"
        android:paddingRight="0dp"
        android:paddingStart="25dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/getExp_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_button" />

    <ImageView
        android:id="@+id/level_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/level_up_angled"
        android:visibility="gone" />

</RelativeLayout>