<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_kai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chokobo.fingerfantasy.ResultActivity" >

        <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="319dp"
        android:paddingLeft="120dp"
        android:paddingStart="25dp"
		android:paddingRight="0dp"
		android:paddingEnd="0dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />
    
        <TextView
        android:id="@+id/getExp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="197dp"
        android:paddingLeft="150dp"
        android:paddingStart="25dp"
		android:paddingRight="0dp"
		android:paddingEnd="0dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />
        
        <TextView
        android:id="@+id/nextExp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="106dp"
        android:paddingLeft="150dp"
        android:paddingStart="25dp"
		android:paddingRight="0dp"
		android:paddingEnd="0dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/getExp_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back_button" />

</RelativeLayout>