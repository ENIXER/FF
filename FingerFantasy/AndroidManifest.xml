<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chokobo.fingerfantasy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestmenuActivity"
            android:label="@string/title_activity_questmenu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BattleActivity"
            android:label="@string/title_activity_battle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ReesultActivity"
            android:label="@string/title_activity_reesult"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ResetActivity"
            android:label="@string/title_activity_reset" >
        </activity>
    </application>

</manifest>
